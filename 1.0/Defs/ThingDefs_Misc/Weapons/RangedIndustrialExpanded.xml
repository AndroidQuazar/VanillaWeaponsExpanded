<!-- Compound Bow -->
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VWE_Bow_Compound</defName> <!-- unique -->
    <label>compound bow</label>
    <description>A modern day bow using levers system to fire an arrow over long distances.\n\nDue to the silencing mechanism, this bow doesn't emit any considerable sound upon firing, which makes it useful in hunting.</description>
    <graphicData>
      <texPath>Things/WeaponRanged/CompoundBow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <generateCommonality>0.05</generateCommonality>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>1.6</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.78</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.65</RangedWeapon_Cooldown>
    </statBases>
	<weaponTags Inherit="False">
		<li>SniperRifle</li>
	</weaponTags>
    <recipeMaker>
      <researchPrerequisite>VWE_CompoundBow</researchPrerequisite>
	  <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
	  </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
	<equippedStatOffsets>
      <HuntingStealth>0.85</HuntingStealth>
	</equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VWE_Arrow_Compound</defaultProjectile>
        <warmupTime>1.45</warmupTime>
        <range>29.9</range>
        <soundCast>VWE_Bow_Compound</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
