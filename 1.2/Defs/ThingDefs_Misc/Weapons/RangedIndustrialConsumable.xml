<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- All Craftable now -->
  <!-- Triple Rocket Launcher -->
  <ThingDef ParentName="BaseMakeableGun">
    <defName>Gun_TripleRocket</defName>
    <label>triple rocket launcher</label>
    <description>A single-use rocket launcher that fires a cluster of three large-bore explosive rockets. Good against smalll groups of tough targets.\n\nBecause of its unwieldiness, single-use limitation, and the massive destruction it causes, it's said that one must be slightly crazy to use this weapon.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/RocketLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
	  <WorkToMake>15000</WorkToMake>
      <MarketValue>1000</MarketValue>
      <Mass>7</Mass>
      <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Spacer</techLevel>
    <costList>
      <Steel>160</Steel>
      <ComponentIndustrial>9</ComponentIndustrial> <!-- reduced by 1 -->
	  <Shell_HighExplosive>3</Shell_HighExplosive>
    </costList>
    <recipeMaker>
	  <recipeUsers>
		<li>TableMachining</li>
	  </recipeUsers>
      <researchPrerequisite>MultibarrelWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting> <!-- Dok # 7 -->
      </skillRequirements>
    </recipeMaker>
    <weaponTags>
	  <li>Gun</li>
      <li>GunHeavy</li>
    </weaponTags>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>SingleUseWeapon</li>
    </thingSetMakerTags>
    <verbs>
      <li>
        <verbClass>Verb_ShootOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Rocket</defaultProjectile>
        <forcedMissRadius>2.9</forcedMissRadius>
        <warmupTime>4.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>35.9</range>
        <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>

